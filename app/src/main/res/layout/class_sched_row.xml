<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:strokeColor="@color/commentbg"
    app:strokeWidth="0.7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">

            <TextView
                android:id="@+id/courseYSG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:text="CYSG"
                android:textStyle="bold"
                android:textColor="@color/pythonblue"
                android:textSize="16sp"
                android:transitionName="yeargs_trasition" />

            <ImageView
                android:id="@+id/class_schedImg"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_margin="10dp"
                android:layout_below="@id/not_yetlbl"
                android:background="@color/light85percent"
                android:scaleType="centerCrop"
                android:transitionName="classimg_transition" />

            <TextView
                android:id="@+id/not_yetlbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/postedby"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/label_date_class"
                android:text=""
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/label_date_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_postedby"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Label"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/label_postedby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/courseYSG"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Posted by:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/postedby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/courseYSG"
                android:layout_margin="5dp"
                android:layout_toRightOf="@id/label_postedby"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/infoalert"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:padding="10dp">
            <TextView
                android:id="@+id/note_lblclass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:drawablePadding="10dp"
                android:textColor="@color/infotext"
                android:textSize="16sp"
                android:text="Note:"/>
            <TextView
                android:id="@+id/noteClassSched"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Not yet updated"
                android:layout_toRightOf="@id/note_lblclass"
                android:textColor="@color/infotext"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
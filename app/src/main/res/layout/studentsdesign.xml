<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    app:cardCornerRadius="5dp"
    android:elevation="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/studentImage"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sherwin G. Carlos"
            android:textColor="@color/pythonblue"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:id="@+id/studentName"
            android:layout_toRightOf="@+id/studentImage"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017101304"
            android:textColor="@android:color/black"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/studentName"
            android:textSize="15sp"
            android:textStyle="bold"
            android:id="@+id/studentNumber"
            android:layout_toRightOf="@+id/studentImage"/>

        <TextView
            android:id="@+id/verifyBtn"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/studentName"
            android:layout_alignParentEnd="true"
            android:background="@drawable/buttonsignin"
            android:gravity="center"
            android:padding="5dp"
            android:text="Disable"
            android:textColor="@color/dangertext"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
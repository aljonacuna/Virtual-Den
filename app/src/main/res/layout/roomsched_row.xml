<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardElevation="3dp"
    app:strokeColor="@color/commentbg"
    app:strokeWidth="0.5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/subjcodeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="15dp"
            android:text="Subject Code"
            android:textColor="@color/pythonblue"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/instructornameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="instructorname"
            android:layout_toRightOf="@id/subjcodeTv"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/yearsctionTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="yearsection"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/instructornameTv"/>
        <TextView
            android:id="@+id/daysofweekTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="daysofweekTV"
            android:layout_below="@id/subjcodeTv"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/timeperiodTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="timeperiodTv"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/instructornameTv"/>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
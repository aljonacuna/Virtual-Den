<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    app:strokeColor="@color/commentbg"
    app:strokeWidth=".5dp"
    app:contentPadding="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/card_Circle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="25dp"
            android:layout_marginRight="5dp"
            app:cardElevation="0dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/placeholder"
                android:scaleType="centerCrop"
                android:id="@+id/searchImageUser"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sherwin G. Carlos"
            android:layout_toRightOf="@id/card_Circle"
            android:textSize="15sp"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:textColor="@color/pythonblue"
            android:id="@+id/userName"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageOfficerRemove"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:visibility="gone"
            android:background="@drawable/menu_announce"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userName"
            android:textColor="@android:color/darker_gray"
            android:layout_toRightOf="@id/card_Circle"
            android:text="Student"
            android:textSize="12sp"
            android:fontFamily="@font/roboto"
            android:id="@+id/userType"/>
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@id/card_Circle"
            android:textSize="13sp"
            android:fontFamily="@font/roboto"
            android:layout_below="@id/userType"
            android:id="@+id/searchDescUser"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/searchDescUser"
            android:drawablePadding="5dp"
            android:background="@drawable/buttonshapeclear"
            android:drawableStart="@drawable/mail"
            android:text="Send PM"
            android:fontFamily="@font/roboto"
            android:textAllCaps="false"
            android:textColor="@color/pythonblue"
            android:textSize="13sp"
            android:id="@+id/sendMsgOfficerBtn"
            android:drawableLeft="@drawable/mail" />
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>

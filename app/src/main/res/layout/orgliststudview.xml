<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:contentPadding="10dp"
    app:cardBackgroundColor="#e8f4f8"
    android:layout_marginBottom="10dp">
    <RelativeLayout
        android:id="@+id/org_rel"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Org name"
            android:id="@+id/org_Name"
            android:textSize="17sp"
            android:textColor="@color/pythonblue"
            android:textStyle="bold"
            android:fontFamily="@font/roboto"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posts: "
            android:id="@+id/studCount"
            android:layout_below="@+id/org_Name"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/roboto"/>
        <TextView
            android:id="@+id/CountPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/studCount"
            android:layout_below="@id/org_Name"/>
        <TextView
            android:layout_width="180dp"
            android:layout_height="1dp"
            android:textSize="16sp"
            android:layout_below="@id/studCount"
            android:background="@android:color/darker_gray"
            android:id="@+id/lineOnly"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Officials: "
            android:id="@+id/org_officiallbl"
            android:layout_below="@+id/lineOnly"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold"
            android:fontFamily="@font/roboto"/>
        <TextView
            android:id="@+id/officials_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:layout_below="@id/lineOnly"
            android:layout_toRightOf="@id/org_officiallbl"/>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true">
            <ImageView
                android:id="@+id/org_Image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/placeholder"
                android:scaleType="centerCrop" />
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>
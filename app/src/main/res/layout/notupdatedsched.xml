<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/course_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course Year Section Group"
            android:textSize="16sp"
            android:transitionName="yeargs_trasition"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/notupdatedimg_class"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_below="@id/course_lbl"
            android:transitionName="classimg_transition"
            android:scaleType="centerInside"
            android:background="@drawable/ic_baseline_collections_24"/>
        <TextView
            android:id="@+id/notelbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not yet updated"
            android:visibility="gone"
            android:layout_toLeftOf="@id/editbtn_class_sched"
            android:textSize="16sp"
            android:textColor="@color/red"
            android:layout_margin="10dp"/>
        <ImageView
            android:id="@+id/editbtn_class_sched"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="7dp"
            app:srcCompat="@drawable/ic_baseline_more_vert_24" />
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".win.activity.ForgotPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:padding="20dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-7dp">
        <Button
            android:id="@+id/loginBtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/buttonshapeclear"
            android:fontFamily="@font/roboto"
            android:text="LOG IN"
            android:textColor="@color/pythonblue"
            android:layout_marginBottom="50dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:layout_marginTop="150dp"
            android:textSize="15sp"
            android:text="Enter your email and we will send you a reset password link."/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextColor="#000000"
            android:layout_marginTop="30dp">

            <EditText
                android:id="@+id/forgotEditEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:digits="qwertzuiopasdfghjklyxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM0123456789.@"
                android:drawableStart="@drawable/email"
                android:drawablePadding="7dp"
                android:fontFamily="@font/roboto"
                android:hint="Email address"
                android:inputType="textEmailAddress"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="17sp"
                android:drawableLeft="@drawable/email" />
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/submitEmail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            style="?attr/borderlessButtonStyle"
            android:background="@drawable/buttonfound"
            android:fontFamily="@font/roboto"
            android:text="RESET PASSWORD"
            android:textSize="16sp"
            android:textColor="#FFFFFF" />

        <ProgressBar
            android:id="@+id/forgotPB"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>